@{
    Layout = null;
}
@using WebApplication6.Services
@inject Calc calc
<!doctype html>
<html>
<head>
    <title>Hello ASP.NET MVC Core</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <link type="text/css" href="~/Style/Style.css" rel="stylesheet">
</head>
<body>
    <header>
        <b>Backend1</b> <a href="~/Home/Index">Home</a>
    </header>
    <main>
        <h1>AccessServiceDirectly</h1>
        <h3>Rand Value First : @calc.num1</h3>
        <h3>Rand Value Second : @calc.num2</h3>
        <h3>Add :</h3>
        <p>@calc.sum()</p>
        <h3>Sub :</h3>
        <p>@calc.sub()</p>
        <h3>Mult :</h3>
        <p>@calc.mult()</p>
        <h3>Div :</h3>
        <p>@calc.div()</p>
    </main>
    <hr>
    <footer>© @DateTime.Now.Year - Backend1</footer>
</body>
</html>